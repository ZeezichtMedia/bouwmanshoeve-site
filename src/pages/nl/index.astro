---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/home/Hero.astro";
import {
  heroImage,
  roomImages,
  breakfastImages,
  surroundingImages,
} from "../../data/images";
---

<Layout title="Home" lang="nl">
  <Hero
    title="Welkom bij Bouwmanshoeve"
    subtitle="Ontdek rust, comfort en de schoonheid van Burgh-Haamstede."
    cta="Bekijk Beschikbaarheid"
    image={heroImage}
  />

  <!-- Intro Section -->
  <section class="py-24 px-4 bg-white">
    <div class="max-w-4xl mx-auto text-center">
      <span
        class="text-accent font-bold tracking-widest uppercase text-sm mb-4 block"
        >Over Ons</span
      >
      <h2
        class="text-4xl md:text-5xl font-serif font-bold text-primary mb-8 leading-tight"
      >
        Een plek om thuis te komen
      </h2>
      <p class="text-xl text-gray-600 leading-relaxed mb-12">
        Gelegen aan de rand van de duinen en op steenworp afstand van het
        strand, biedt B&B Bouwmanshoeve de perfecte ontsnapping aan de
        dagelijkse drukte. Geniet van onze gastvrijheid, de comfortabele kamers
        en het uitgebreide ontbijt in onze sfeervolle hoeve.
      </p>
      <div class="w-24 h-1 bg-accent mx-auto rounded-full"></div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 px-4 bg-stone-50">
    <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Card 1 -->
      <a
        href="/nl/accommodatie"
        class="block group relative overflow-hidden rounded-2xl shadow-lg aspect-[4/5] cursor-pointer"
      >
        <img
          src={roomImages[0]}
          alt="Comfortabele Kamers"
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex flex-col justify-end p-8"
        >
          <h3 class="text-2xl font-serif font-bold text-white mb-2">
            Stijlvolle Kamers
          </h3>
          <p
            class="text-gray-200 transform translate-y-4 opacity-0 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100"
          >
            Voorzien van alle moderne gemakken voor een heerlijke nachtrust.
          </p>
        </div>
      </a>

      <!-- Card 2 -->
      <a
        href="/nl/accommodatie#ontbijt"
        class="block group relative overflow-hidden rounded-2xl shadow-lg aspect-[4/5] cursor-pointer md:-mt-12"
      >
        <img
          src={breakfastImages[0]}
          alt="Heerlijk Ontbijt"
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex flex-col justify-end p-8"
        >
          <h3 class="text-2xl font-serif font-bold text-white mb-2">
            Vers Ontbijt
          </h3>
          <p
            class="text-gray-200 transform translate-y-4 opacity-0 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100"
          >
            Elke ochtend een uitgebreid continentaal ontbijt met
            streekproducten.
          </p>
        </div>
      </a>

      <!-- Card 3 -->
      <a
        href="/nl/omgeving"
        class="block group relative overflow-hidden rounded-2xl shadow-lg aspect-[4/5] cursor-pointer"
      >
        <img
          src={surroundingImages[0]}
          alt="Prachtige Omgeving"
          class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
        />
        <div
          class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent flex flex-col justify-end p-8"
        >
          <h3 class="text-2xl font-serif font-bold text-white mb-2">
            Natuur & Omgeving
          </h3>
          <p
            class="text-gray-200 transform translate-y-4 opacity-0 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100"
          >
            Wandel direct de natuur in of fiets naar het historische Slot
            Haamstede.
          </p>
        </div>
      </a>
    </div>
  </section>
</Layout>

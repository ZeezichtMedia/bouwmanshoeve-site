---
import Layout from "../../layouts/Layout.astro";
import { galleryImages } from "../../data/images";

const title = "Reserve";
const lang = "en";
---

<Layout title={title} lang={lang}>
    <!-- Hero Section -->
    <div class="relative h-[40vh] min-h-[400px]">
        <img
            src={galleryImages[1]}
            alt="Reserve at Bouwmanshoeve"
            class="absolute inset-0 w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/40"></div>
        <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center text-white px-4">
                <h1
                    class="text-3xl md:text-7xl font-serif font-bold mb-6 drop-shadow-lg text-white"
                >
                    {title}
                </h1>
                <p
                    class="text-xl md:text-2xl font-light max-w-2xl mx-auto drop-shadow-md"
                >
                    Book your stay directly at the source
                </p>
            </div>
        </div>
    </div>

    <!-- Reservation Form -->
    <section class="py-20 px-4 bg-stone-50">
        <div
            class="max-w-3xl mx-auto bg-white p-8 md:p-12 rounded-2xl shadow-xl"
        >
            <h2
                class="text-3xl font-serif font-bold text-primary mb-8 text-center"
            >
                Reservation Request
            </h2>
            <p class="text-gray-600 mb-10 text-center">
                Fill out the form below and we will contact you as soon as
                possible to confirm your reservation.
            </p>

            <form
                name="reservation"
                method="POST"
                data-netlify="true"
                action="/en/contact?success=true"
                class="space-y-6"
            >
                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label
                            for="naam"
                            class="block text-sm font-semibold text-gray-700"
                            >Name</label
                        >
                        <input
                            type="text"
                            id="naam"
                            name="naam"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                            placeholder="Your full name"
                        />
                    </div>
                    <div class="space-y-2">
                        <label
                            for="email"
                            class="block text-sm font-semibold text-gray-700"
                            >Email</label
                        >
                        <input
                            type="email"
                            id="email"
                            name="email"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                            placeholder="your@email.com"
                        />
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label
                            for="telefoon"
                            class="block text-sm font-semibold text-gray-700"
                            >Phone Number</label
                        >
                        <input
                            type="tel"
                            id="telefoon"
                            name="telefoon"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                            placeholder="+31 6 12345678"
                        />
                    </div>
                    <div class="space-y-2">
                        <label
                            for="personen"
                            class="block text-sm font-semibold text-gray-700"
                            >Number of Guests</label
                        >
                        <select
                            id="personen"
                            name="personen"
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                        >
                            <option value="1">1 Person</option>
                            <option value="2" selected>2 Persons</option>
                        </select>
                    </div>
                </div>

                <div class="grid md:grid-cols-2 gap-6">
                    <div class="space-y-2">
                        <label
                            for="aankomst"
                            class="block text-sm font-semibold text-gray-700"
                            >Arrival Date</label
                        >
                        <input
                            type="date"
                            id="aankomst"
                            name="aankomst"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                        />
                    </div>
                    <div class="space-y-2">
                        <label
                            for="vertrek"
                            class="block text-sm font-semibold text-gray-700"
                            >Departure Date</label
                        >
                        <input
                            type="date"
                            id="vertrek"
                            name="vertrek"
                            required
                            class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                        />
                    </div>
                </div>

                <div class="space-y-2">
                    <label
                        for="kamer"
                        class="block text-sm font-semibold text-gray-700"
                        >Room Preference</label
                    >
                    <select
                        id="kamer"
                        name="kamer"
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                    >
                        <option value="geen-voorkeur">No preference</option>
                        <option value="kamer-1">Room 1 (The Farmhouse)</option>
                        <option value="kamer-2">Room 2 (The Dune)</option>
                    </select>
                </div>

                <div class="space-y-2">
                    <label
                        for="opmerkingen"
                        class="block text-sm font-semibold text-gray-700"
                        >Comments or Questions</label
                    >
                    <textarea
                        id="opmerkingen"
                        name="opmerkingen"
                        rows="4"
                        class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-accent focus:border-accent transition-colors"
                        placeholder="Do you have special requests or questions?"
                    ></textarea>
                </div>

                <button
                    type="submit"
                    class="w-full bg-accent hover:bg-accent/90 text-white font-bold py-4 rounded-lg transition-colors shadow-lg hover:shadow-xl text-lg"
                >
                    Send Request
                </button>
            </form>
        </div>
    </section>
</Layout>

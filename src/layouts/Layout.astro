---
import '../styles/global.css';
import Header from '../components/common/Header.astro';
import Footer from '../components/common/Footer.astro';

interface Props {
	title: string;
    lang?: string;
}

const { title, lang = 'nl' } = Astro.props;
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="B&B Bouwmanshoeve - Burgh-Haamstede. Geniet van rust, ruimte en natuur in Zeeland." />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Bouwmanshoeve</title>
	</head>
	<body class="min-h-screen flex flex-col font-sans text-gray-800 bg-stone-50">
        <Header lang={lang} />
		<main class="flex-grow">
    		<slot />
        </main>
        <Footer />
	</body>
</html>

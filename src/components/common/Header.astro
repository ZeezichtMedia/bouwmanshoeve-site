---
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
  lang: string;
}

const { lang } = Astro.props;

const navItems = [
  {
    href: getRelativeLocaleUrl(lang, ""),
    label: lang === "nl" ? "Home" : "Home",
  },
  {
    href: getRelativeLocaleUrl(lang, "accommodatie"),
    label:
      lang === "nl"
        ? "Accommodatie"
        : lang === "de"
          ? "Unterkunft"
          : "Accommodation",
  },
  {
    href: getRelativeLocaleUrl(lang, "omgeving"),
    label:
      lang === "nl" ? "Omgeving" : lang === "de" ? "Umgebung" : "Surroundings",
  },
  {
    href: getRelativeLocaleUrl(lang, "gallerij"),
    label: lang === "nl" ? "Gallerij" : lang === "de" ? "Galerie" : "Gallery",
  },
  { href: getRelativeLocaleUrl(lang, "contact"), label: "Contact" },
];
---

<header
  class="bg-white/90 backdrop-blur-md shadow-sm sticky top-0 z-50 border-b border-secondary"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a
          href={getRelativeLocaleUrl(lang, "")}
          class="font-serif text-xl sm:text-2xl font-bold text-primary tracking-tight"
        >
          Bouwmanshoeve
        </a>
      </div>

      <!-- Desktop Nav -->
      <nav class="hidden md:flex space-x-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="text-gray-700 hover:text-accent font-medium transition-colors"
            >
              {item.label}
            </a>
          ))
        }
      </nav>

      <!-- Right Side: Lang + CTA + Mobile Menu Button -->
      <div class="flex items-center space-x-4">
        <!-- Language Switcher (Desktop) -->
        <div
          class="hidden md:flex space-x-2 text-sm font-medium border-r pr-4 border-gray-300"
        >
          <a
            href="/nl"
            class={lang === "nl"
              ? "text-primary"
              : "text-gray-400 hover:text-gray-600"}>NL</a
          >
          <a
            href="/en"
            class={lang === "en"
              ? "text-primary"
              : "text-gray-400 hover:text-gray-600"}>EN</a
          >
          <a
            href="/de"
            class={lang === "de"
              ? "text-primary"
              : "text-gray-400 hover:text-gray-600"}>DE</a
          >
        </div>

        <!-- CTA Button -->
        <a
          href={getRelativeLocaleUrl(lang, "reserveren")}
          class="bg-primary text-white px-4 py-2 sm:px-5 sm:py-2.5 rounded-full hover:bg-primary/90 transition-all font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 text-xs sm:text-sm"
        >
          {lang === "nl" ? "Boek Nu" : lang === "de" ? "Buchen" : "Book Now"}
        </a>

        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="md:hidden p-2 rounded-md text-gray-700 hover:text-primary hover:bg-gray-100 focus:outline-none"
          aria-label="Menu"
        >
          <svg
            class="h-6 w-6"
            stroke="currentColor"
            fill="none"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (Hidden by default) -->
  <div
    id="mobile-menu"
    class="hidden md:hidden bg-white border-b border-gray-200"
  >
    <div class="px-4 pt-2 pb-4 space-y-1">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-primary hover:bg-gray-50"
          >
            {item.label}
          </a>
        ))
      }
      <!-- Mobile Language Switcher -->
      <div
        class="pt-4 border-t border-gray-200 mt-2 flex items-center space-x-4 px-3"
      >
        <span class="text-gray-500 text-sm font-medium">Language:</span>
        <a
          href="/nl"
          class={lang === "nl"
            ? "text-primary font-bold"
            : "text-gray-500 hover:text-gray-700"}>NL</a
        >
        <a
          href="/en"
          class={lang === "en"
            ? "text-primary font-bold"
            : "text-gray-500 hover:text-gray-700"}>EN</a
        >
        <a
          href="/de"
          class={lang === "de"
            ? "text-primary font-bold"
            : "text-gray-500 hover:text-gray-700"}>DE</a
        >
      </div>
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById("mobile-menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>

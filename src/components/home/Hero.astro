---
const { title, subtitle, cta, image } = Astro.props;
---

<section
  class="relative h-[85vh] min-h-[600px] flex items-center justify-center overflow-hidden"
>
  <div class="absolute inset-0 z-0">
    <img
      src={image}
      alt="Bouwmanshoeve"
      class="w-full h-full object-cover transition-transform duration-1000 hover:scale-105"
    />
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/20 via-black/10 to-black/40"
    >
    </div>
  </div>
  <div
    class="relative z-10 text-center text-white px-4 max-w-5xl mx-auto animate-fade-in-up"
  >
    <h1
      class="text-5xl md:text-7xl lg:text-8xl font-bold font-serif mb-8 leading-tight drop-shadow-2xl tracking-tight text-white"
    >
      {title}
    </h1>
    <p
      class="text-xl md:text-3xl mb-12 font-light drop-shadow-lg text-gray-100 max-w-3xl mx-auto leading-relaxed"
    >
      {subtitle}
    </p>
    <a
      href="/nl/reserveren"
      class="inline-flex items-center gap-3 bg-accent hover:bg-yellow-600 text-white text-lg font-bold py-4 px-10 rounded-full transition-all transform hover:scale-105 shadow-xl hover:shadow-2xl ring-4 ring-white/20"
    >
      {cta}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="lucide lucide-arrow-right"
        ><line x1="5" y1="12" x2="19" y2="12"></line><polyline
          points="12 5 19 12 12 19"></polyline></svg
      >
    </a>
  </div>
</section>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 1s ease-out forwards;
  }
</style>
